@model Equipe

@{
    ViewData["Title"] = "Equipe";
    
}



<form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data">

    <label for="">Nome</label>
    <input placeholder="Santos..." type="text" name="Nome" required>

    <label for="">Imagem</label>
    <input type="file" name="Imagem">

    <button class="btn btn-warning" type = "submit">Cadastrar</button>



</form>



<table class="table table-striped table-responsive"> 
    <thead>
        <th>Id</th>
        <th>Nome</th>
        <th>Jogador</th>
        <th></th>
        <th></th>
        
    </thead>

    <tbody>
           @foreach (Equipe equipe in ViewBag.Equipe)
           {
        <tr>
            <td>@equipe.IdEquipe</td>
            <td>@equipe.Nome</td>
            <td>
                <img src="/img/Equipes/@equipe.Imagem" width="50px">           
            </td>
            <td>
                <a asp-area="" asp-controller="Equipe" asp-action="Excluir" asp-route-id="@equipe.IdEquipe" style="text-decoration: none;">🗑️</a>
            </td>
            <td><a asp-area="" asp-controller="Equipe" asp-action="Editar" asp-route-id="@equipe.IdEquipe" style="text-decoration: none;">✏️</a></td>

        </tr>
           }
            
    </tbody>
</table>