@model Jogador

@{
    ViewData["Title"] = "Jogador";

}

<link rel="stylesheet" href="~/css/jogadores.css">

@if (ViewBag.Login == null)
{
    <main>
        <section class="banner">

            <article class="container-grid equipes-flex container-grid-d">

                <div class="border-gradient-e">

                    <form method="post" action="@Url.Action("Cadastrar")" enctype="multipart/form-data" class="box-equipes">

                        <h1>Acesso Negado</h1>

                        <h1>Por favor, realize o login para ter acesso a essa página.</h1>

                    </form>

                </div>
            </article>

        </section>
    </main>
}
else
{

<main>
    <section class="banner">

        <article class="container-grid jogadores-flex container-grid-d">

            <div class="border-gradient-j">

                <form class="box-jogadores" method="post" action="@Url.Action("Cadastrar")">
                    <h1>Cadastro de jogadores</h1>
                    <hr>

                    <div class="input-gradient-jogadores">

                        <select name="IdEquipe" id="IdEquipe" style="width: 100%;" id="select-team">

                            <option value="0">Selecione a equipe</option>

                            @foreach (Equipe equipe in ViewBag.Equipe)
                            {
                                <option value="@equipe.IdEquipe">@equipe.Nome</option>
                            }

                        </select>
                    </div>

                    <div class="input-gradient-jogadores">
                        <input type="text" placeholder="Digite o nome do jogador..." type="text" name="Nome" required>
                    </div>

                    <div class="input-gradient-jogadores">
                        <input type="email" placeholder="Digite o email do jogaodor..." name="Email" required>
                    </div>

                    <div class="input-gradient-jogadores">
                        <input type="password" placeholder="Digite a senha..." name="Senha" required>
                    </div>


                    <button type="submit" class="cadastro">Cadastro</button>

                </form>
            </div>
        </article>



        <article class="container-grid">
            <table>
                <thead>

                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th></th>
                        <th></th>
                    </tr>

                </thead>

                <tbody>

                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr class="table-line">
                            <td class="number">@jogador.IdJogador</td>
                            <td>@jogador.Nome</td>
                            <td>@jogador.Email</td>
                            @* <td>@jogador.Equipe.Nome</td> *@
                            @* <td>@jogador.IdEquipe</td> *@
                            <td> <img src="/img/Equipes/@jogador.Equipe.Imagem" width="50px" alt=""></td>
                            <td class="icon-trash"><a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                                    asp-route-id="@jogador.IdJogador" style="text-decoration: none;"><img
                                        src="~/assets/icons/icon-trash.svg" alt=""></a></td>
                            <td><a asp-area="" asp-controller="Jogador" asp-action="Editar"
                                    asp-route-id="@jogador.IdJogador" style="text-decoration: none;">✏️</a></td>
                        </tr>
                    }


                </tbody>

            </table>
        </article>

    </section>
</main>
}