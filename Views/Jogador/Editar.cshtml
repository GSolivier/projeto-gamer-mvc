@model Jogador

@{
    ViewData["Title"] = "Editar";
}

<h1>Edição de jogadores</h1>

<form method="post" action= '@Url.Action("Atualizar")' enctype="multipart/form-data">

    <input placeholder="" type="hidden" name="IdJogador" value="@ViewBag.Jogador.IdJogador" >

    <label for="">Nome</label>
    <input  type="text" name="Nome" required  value = "@ViewBag.Jogador.Nome" >

    <label for="">Email</label>
    <input  type="email" name="Email" value= "@ViewBag.Jogador.Email" >

    <label for="">Senha</label>
    <input  type="password" name="Senha" value= "@ViewBag.Jogador.Senha" >

    <label for="">IdEquipe</label>
    <input  type="text" name="IdEquipe" value= "@ViewBag.Jogador.IdEquipe" >

    <button type="submit" >ATUALIZAR</button>

</form>